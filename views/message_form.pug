extends layout 

block content 

    .message-form-container 
        form(method="POST" action="")

            label(for='title') Title
            input(name='title' id='title' type='text' placeholder='Enter a title for your message' required='true')

            label(for='text') Text
            input(name='text' id='text' type='text' placeholder='Message text' required='true') 

            button(type='submit') Submit message

        if errors
            ul
                for error in errors
                    li!= error.msg
